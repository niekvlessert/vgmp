<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/vgmp_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/vgmp_surface"
        android:navigationIcon="@drawable/ic_skip_previous"
        app:navigationIconTint="@color/vgmp_text_primary"
        app:title="Settings"
        app:titleTextColor="@color/vgmp_text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Spectrum Analyzer Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spectrum Analyzer"
                android:textColor="@color/vgmp_accent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Enable Analyzer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Kaleidoscope"
                    android:textColor="@color/vgmp_text_primary"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_analyzer_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/vgmp_accent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/vgmp_divider" />

            <!-- Fade Timeout -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Auto-hide timeout (seconds)"
                android:textColor="@color/vgmp_text_primary"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player hides after inactivity, showing kaleidoscope"
                android:textColor="@color/vgmp_text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <SeekBar
                    android:id="@+id/seekbar_fade_timeout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="60"
                    android:progressTint="@color/vgmp_accent"
                    android:thumbTint="@color/vgmp_accent" />

                <TextView
                    android:id="@+id/tv_fade_timeout_value"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="10s"
                    android:textColor="@color/vgmp_text_secondary"
                    android:textSize="14sp"
                    android:gravity="end" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
