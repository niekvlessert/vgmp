<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/vgmp_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/vgmp_surface"
        android:navigationIcon="@drawable/ic_skip_previous"
        app:navigationIconTint="@color/vgmp_text_primary"
        app:title="Settings"
        app:titleTextColor="@color/vgmp_text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Spectrum Analyzer Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spectrum Analyzer"
                android:textColor="@color/vgmp_accent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Enable Analyzer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Kaleidoscope"
                    android:textColor="@color/vgmp_text_primary"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_analyzer_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/vgmp_accent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/vgmp_divider" />

            <!-- Analyzer Style -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Analyzer Style"
                android:textColor="@color/vgmp_text_primary"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radio_analyzer_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radio_kaleidoscope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kaleidoscope"
                    android:textColor="@color/vgmp_text_primary" />

                <RadioButton
                    android:id="@+id/radio_bars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prism Bars"
                    android:textColor="@color/vgmp_text_primary" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/vgmp_divider" />

            <!-- Fade Timeout -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Auto-hide timeout (seconds)"
                android:textColor="@color/vgmp_text_primary"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player hides after inactivity, showing kaleidoscope"
                android:textColor="@color/vgmp_text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <SeekBar
                    android:id="@+id/seekbar_fade_timeout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="60"
                    android:progressTint="@color/vgmp_accent"
                    android:thumbTint="@color/vgmp_accent" />

                <TextView
                    android:id="@+id/tv_fade_timeout_value"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="10s"
                    android:textColor="@color/vgmp_text_secondary"
                    android:textSize="14sp"
                    android:gravity="end" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/vgmp_divider"
                android:layout_marginTop="16dp" />

            <!-- VGM Types Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VGM Types"
                android:textColor="@color/vgmp_accent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select which types are shown and playable"
                android:textColor="@color/vgmp_text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/check_type_vgm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VGM/VGZ"
                android:textColor="@color/vgmp_text_primary" />

            <CheckBox
                android:id="@+id/check_type_gme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NSF/GBS/SPC/etc (GME)"
                android:textColor="@color/vgmp_text_primary" />

            <CheckBox
                android:id="@+id/check_type_kss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KSS/MSX"
                android:textColor="@color/vgmp_text_primary" />

            <CheckBox
                android:id="@+id/check_type_tracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tracker (MOD/XM/S3M/IT)"
                android:textColor="@color/vgmp_text_primary" />

            <CheckBox
                android:id="@+id/check_type_midi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MIDI"
                android:textColor="@color/vgmp_text_primary" />

            <CheckBox
                android:id="@+id/check_type_mus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doom MUS/LMP"
                android:textColor="@color/vgmp_text_primary" />

            <CheckBox
                android:id="@+id/check_type_rsn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RSN (SPC archives)"
                android:textColor="@color/vgmp_text_primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/vgmp_divider" />

            <!-- Playback Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Playback"
                android:textColor="@color/vgmp_accent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- Favorites Only Mode -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Favorites Only Mode"
                        android:textColor="@color/vgmp_text_primary"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_favorites_only"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/vgmp_accent" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When enabled, only favorite tracks and games will play during automatic playback"
                    android:textColor="@color/vgmp_text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/vgmp_divider" />

            <!-- Library Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Library"
                android:textColor="@color/vgmp_accent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_import"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/import_library"
                    android:layout_marginEnd="8dp"
                    app:icon="@drawable/ic_import" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_export"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/export_library"
                    app:icon="@drawable/ic_export" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
