<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:background="@color/vgmp_surface"
    android:elevation="8dp">

    <!-- Album art thumbnail -->
    <ImageView
        android:id="@+id/iv_mini_art"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vgmp_logo"
        android:contentDescription="Album art" />

    <!-- Track info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="4dp">

        <TextView
            android:id="@+id/tv_mini_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_track_playing"
            android:textColor="@color/vgmp_text_primary"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_mini_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/vgmp_text_secondary"
            android:textSize="11sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Prev -->
    <ImageButton
        android:id="@+id/btn_mini_prev"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_skip_previous"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/vgmp_text_primary"
        android:contentDescription="@string/btn_prev" />

    <!-- Play/Pause -->
    <ImageButton
        android:id="@+id/btn_mini_play_pause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_play"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/vgmp_accent"
        android:contentDescription="@string/btn_play" />

    <!-- Next -->
    <ImageButton
        android:id="@+id/btn_mini_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_skip_next"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/vgmp_text_primary"
        android:contentDescription="@string/btn_next" />

</LinearLayout>
