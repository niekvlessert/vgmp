<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/vgmp_surface"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Pack image -->
        <ImageView
            android:id="@+id/iv_pack_art"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/vgmp_logo"
            android:contentDescription="Pack art" />

        <!-- Pack info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/tv_pack_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/vgmp_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_pack_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/vgmp_text_secondary"
                android:textSize="12sp"
                android:maxLines="3"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_pack_chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/vgmp_accent"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Download button and progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_download_pack"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Download"
                    android:textSize="12sp"
                    android:textColor="@color/vgmp_text_primary"
                    android:backgroundTint="@color/vgmp_accent" />

                <ProgressBar
                    android:id="@+id/progress_pack"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:progressTint="@color/vgmp_accent"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_pack_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/vgmp_text_secondary"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
